<script>
$(document).ready(function() {
  function selectHandler(element) {
    attribute = element.attribute;
    $("#session-form").attr("action", "/" + attribute + "s/sign_in");
    $("#email_input").attr("name", attribute + "[email]");
    $("#password_input").attr("name", attribute + "[password]");
    if ($("#" + element.id).index() == 0) {
      $("#session-inputs").addClass("jumbotron-form-sharp-top-left");
    } else {
      $("#session-inputs").removeClass("jumbotron-form-sharp-top-left");
    }
  }

  selectorFor(selectHandler,
    [{id: 'professor-selector', attribute: 'instructor'},
    {id: 'student-selector', attribute: 'student'}]
  );
});
</script>
<div class="jumbotron">
  <h1>Sign In</h1>
  <div class="horizontal-selector">
    <div class="selector-option" id="professor-selector">
      <h3>Professor</h3>
    </div>
    <div class="selector-option" id="student-selector">
      <h3>Student</h3>
    </div>
  </div>
  <%= form_tag session_path(:instructor), id: 'session-form' do |f| %>
    <div class="jumbotron-form" id="session-inputs">
      <div class="jumbotron-form-group">
        <p class="jumbotron-form-label"><span>Email<span></p>
        <div class="jumbotron-form-input"><%= text_field_tag 'instructor[email]', nil, id: 'email_input' %></div>
      </div>
      <div class="jumbotron-form-group">
        <p class="jumbotron-form-label"><span>Password<span></p>
        <div class="jumbotron-form-input"><%= password_field_tag 'instructor[password]', nil, id: 'password_input' %></div>
      </div>
    </div>
    <%= submit_tag 'Sign In', class: 'button' %>
  <% end %>
</div>
