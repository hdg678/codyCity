<%= form_for(exercise) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :instructions %>
    <%= f.text_area :instructions %>
  </div>

  <div class="field">
    <%= f.label :lesson_id %>
    <%= f.text_field :lesson_id %>
  </div>

  <div class="field">
    <%= f.label :point_value %>
    <%= f.text_field :point_value %>
  </div>

  <div class="field">
    <%= f.label :test_file %>
    <%= f.file_field :test_file %>
  </div>

  <div class="field">
    <%= f.label :exercise_file %>
    <%= f.file_field :exercise_file %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
