<div class="sidebar-container">
  <div class="sidebar">
    <%= link_to root_path do %>
      <div class="sidebar-icon <%= 'sidebar-icon-selected' if current_page?(root_path) %>">
        <%= image_tag 'home-240.png' %>
        <p>Home</p>
      </div>
    <% end %>
    <% if false %>
    <%= link_to root_path do %>
      <div class="sidebar-icon <%= 'sidebar-icon-selected' if params[:controller] == 'lessons' %>">
        <%= image_tag 'lessons-240.png' %>
        <p>Lessons</p>
      </div>
    <% end %>
    <%= link_to exercises_path do %>
      <div class="sidebar-icon <%= 'sidebar-icon-selected' if params[:controller] == 'exercises' %>">
        <%= image_tag 'grades-240.png' %>
        <p>Grades</p>
      </div>
    <% end %>
    <%= link_to user_path(current_user) do %>
      <div class="sidebar-icon <%= 'sidebar-icon-selected' if current_page?(user_path(current_user)) %>">
        <%= image_tag 'lessons-240.png' %>
        <p>Profile</p>
      </div>
    <% end %>
    <% end %>
  </div>
</div>
